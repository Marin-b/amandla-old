<%= link_to place_path(place), class: 'outline-none' do %>
  <div class="place-card bg-white rounded shadow-md hover:shadow-lg transition-all" data-places--card-target='card' data-id='<%= place.id %>'>
    <div class="h-52 w-full rounded bg-cover bg-center flex items-center justify-center relative" style='background-image: linear-gradient(180deg, rgba(52, 100, 109, 0.08) 0%, rgba(15, 29, 31, 0.6) 100%), url(<%= place.banner_url %>)'>
      <div>
        <h3 class='text-2xl text-white font-bold'>
          <%= place.name %>
        </h3>
        <p class='text-yellow text-center'>
          <%= place.category.name %>
        </p>
      </div>
      <div class='absolute bottom-4 left-4'>
        <% place.tags.each do |tag| %>
          <%= render Tag::Icon.new(tag, { classes: 'fa-lg ml-2 text-green'}) %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
